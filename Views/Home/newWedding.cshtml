@model Wedding
<div class="container">
    <div class="row">
        <h1>Plan your Wedding </h1><h2><a href="@ViewBag.CurrentUser" >Dashboard </a></h2><h2><form action="Logout" method="post">
            <button type="submit">Logout</button>
        </form></h2>
    </div>
    <div class="row">
        <form action="makeWedding" method="post">
            <label asp-for="WedderOne"></label>
            <input asp-for="WedderOne">
            <span asp-validation-for="WedderOne"></span>
            <br>
            <label asp-for="WedderTwo"></label>
            <input asp-for="WedderTwo">
            <span asp-validation-for="WedderTwo"></span>
            <br>
            <label asp-for="Location"></label>
            <input asp-for="Location">
            <span asp-validation-for="Location"></span>
            <br>
            <label asp-for="Date"></label>
            <input asp-for="Date">
            <span asp-validation-for="Date"></span>
            <br>
            <input type="hidden" name="CreatorId" value="@ViewBag.CurrentUser">
            <input type="submit" value="Create Wedding!">
        </form>
    </div>
</div>